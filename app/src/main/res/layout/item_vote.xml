<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:background="#F9F9F9"
    android:elevation="2dp">

    <TextView
        android:id="@+id/vote_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote question"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/vote_cancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCELED"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/vote_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limit: -"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/vote_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textStyle="italic"
        android:textSize="13sp"
        android:layout_marginTop="2dp"
        android:textColor="#888888"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/vote_yes_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <Button
            android:id="@+id/vote_no_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/vote_abstain_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="I abstain"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/vote_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes: 0 | No: 0 | Abstain: 0"
        android:textSize="14sp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/cancel_vote_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel vote"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:visibility="gone"/>
</LinearLayout>