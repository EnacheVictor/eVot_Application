<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/login">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Welcome!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="-40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is eVot â€“ a communication platform between tenants and admins."
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/adminDashboardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Admin Dashboard"
            android:visibility="gone"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/associationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Associations"
            android:visibility="gone"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

    </LinearLayout>
</layout>